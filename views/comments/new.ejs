<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;color: white;">Dodaj novi komentar na  <%= book.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/books/<%= book._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Potvrdi!</button>
                </div>
            </form>
            <a href="/books"style="color:white;font-size:medium">Vrati se</a>
        </div>
    </div>
</div>
