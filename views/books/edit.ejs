<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;color: white;">Uredi <%= book.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[name]" value="<%= book.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[writer]" value="<%= book.writer %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[image]" value="<%= book.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[description]" value="<%= book.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Potvrdi!</button>
                </div>
            </form>
            <a href="/books" style="color:white;font-size:medium">Vrati se</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
